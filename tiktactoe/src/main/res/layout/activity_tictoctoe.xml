<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/colorBackgroundld"
        android:layout_height="match_parent"
        tools:context=".TicTacToeHome">

    <androidx.appcompat.widget.AppCompatImageView
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/app_name"
            android:layout_width="280dp"
            android:layout_height="55dp"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginBottom="25dp"
            android:layout_above="@id/layout_board"
            android:layout_centerHorizontal="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/colorAccentld"
            tools:text="abhikr Won"
            android:id="@+id/text_view_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontFamily="cursive" android:textStyle="bold"
            android:textAllCaps="false" android:textSize="30sp"/>

    <GridLayout
            android:padding="16dp"
            android:alignmentMode="alignBounds"
            android:useDefaultMargins="true"
            android:layout_centerInParent="true"
            android:rowCount="3"
            android:columnCount="3"
            android:id="@+id/layout_board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button"
            android:layout_marginBottom="15dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/abhikr_playstore"
            android:id="@+id/button_restart"
            android:textAllCaps="false"
            android:text="@string/restart"
            android:padding="8dp"
            app:cornerRadius="16dp"
            app:rippleColor="@color/colorAccentld"
            app:icon="@drawable/ic_restart"
            app:iconTint="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/abhikr_playstore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/download_our_main_app"
            android:layout_centerHorizontal="true"
            android:textStyle="italic"
            android:fontFamily="cursive"
            android:textSize="18sp"
            android:paddingBottom="8dp"
            android:textColor="@color/colorAccentld"
            android:layout_alignParentBottom="true"/>

</RelativeLayout>